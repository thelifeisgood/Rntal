<%= simple_form_for(@garant_locataire) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :civilite %>
    <%= f.input :nom %>
    <%= f.input :prenom %>
    <%= f.input :adresse %>
    <%= f.input :codePostal %>
    <%= f.input :ville %>
    <%= f.association :locataire %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
