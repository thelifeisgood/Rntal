<%= simple_form_for(@bail) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :typeDeBail %>
    <%= f.input :dureeDuBail %>
    <%= f.input :dateDebutBail %>
    <%= f.input :dateFinBail %>
    <%= f.input :destinationDesLocaux %>
    <%= f.input :loyerHorsCharges %>
    <%= f.input :provisionCharges %>
    <%= f.input :modaliteReglementChargesRecuperables %>
    <%= f.input :revisionAutomatiqueDuLoyer %>
    <%= f.input :jourExigibiliteLoyer %>
    <%= f.input :modeReglement %>
    <%= f.input :enregistrementAutomatiqueLoyer %>
    <%= f.input :assuranceColocation %>
    <%= f.hidden_field :locataire_id %>
    <%= f.hidden_field :bien_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
