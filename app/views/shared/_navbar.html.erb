<!--Après connexion-->
<div class="application__header-container">
  <div class="application__header">


<% if user_signed_in? %>

    <div>
      <div>
        <div class="header__logo header__logo--signed-in">
          <!---->

        </div>
      </div>
        <ul class="header__tabs">
          <li class="header__tab header__search ">
          <%= active_link_to root_path, :class => 'header__link' do %>
            <span>
              <div class="header__tab-icon header__tab-icon--search">
              </div>
              Recherche
            </span>
          <% end %>
          </li>
          <li class="header__tab header__cart ">
          <a href="/cart" class="header__link">
            <span>
              <div class="header__tab-icon header__tab-icon--cart-empty">
              </div>
              Historique
            </span>
            <!---->
          </a>
          </li>
          <li class="header__tab header__tickets">
          <a href="/tickets" class="header__link">
            <span>
              <div class="header__tab-icon header__tab-icon--tickets">
              </div>
              Syntèse
            </span>
          </a>
          </li>
        </ul>

        <ul class="header__account">
         <li class="header__account-item header__help">
          <div class="help__menu">
            <a target="_blank" class="header__link" href="https://aide.rntal.fr">
              <span>
                Aide
              </span>
            </a>
          </div>
          </li>
        <!---->
          <li class="header__account-item header__user">
            <div id="user-menu" class="user-menu">
              <div class="dropdown">
              <a class="header__link" id="navbar-wagon-menu" data-toggle="dropdown">
                <span class="user-menu__label">
                  <div id="avatar" class="user-menu__avatar clicktale-pii">
                  </div>
                  <label>
                    <span class="clicktale-pii"><%= current_user.email %>
                    </span>
                  </label>
                </span>
              </a>
              <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li class="user-menu__item">
              <%= active_link_to edit_user_registration_path do %>
                <i class="user-menu__icon user-menu__icon--preferences">
                </i>
                Préférences
              <% end %>
              </li>
              <li class="user-menu__item ">
              <a href="/discount-cards" class="">
                <i class="user-menu__icon user-menu__icon--card">
                </i>
                Achat
              </a>
              </li>
              <li class="user-menu__item">
              <a class="">
                <i class="user-menu__icon user-menu__icon--add-code">
                </i>
                Code d’invitation
              </a>
              </li>
              <li class="user-menu__item">
              <%= active_link_to destroy_user_session_path, method: :delete do %>
                <i class="user-menu__icon user-menu__icon--signout">
                </i>
                Déconnexion
              <% end %>
              </li>
              </ul>
            </div>
          </li>
        </ul>
    </div>

<!--Avant connexion-->
<% else %>

    <div class="visitor-header">
      <div class="active">
        <div class="header__logo header__logo--large">
          <!---->
        </div>
      </div>
      <!---->
      <ul class="header__account">
        <li class="header__account-item header__signup">
          <a href="/signup" class="header__signin-button">Créer un compte
          </a>
        </li>

        <li class="header__account-item header__signin">
          <button class="header__signin-button">
            Se connecter
          </button>
        </li>

        <!---->
        <li class="header__account-item header__help">
          <div class="help__menu">
            <a target="_blank" class="header__link " href="https://aide.rntal.fr">
              <span>
                Aide
              </span>
            </a>
          </div>
        </li>

      </ul>
    </div>


<% end %>

  </div>
</div>
